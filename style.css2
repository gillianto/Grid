

.container {
    display: grid;
    grid-template-rows: repeat(5, 100px);
    grid-template-columns: repeat(5, 100px);
    grid-auto-columns: 100px;
    grid-auto-flow: column;
}

.item-1 {
    grid-row: 1 / 3;
    grid-column: 1 / 6;
}

.item-2 {
    grid-area: 2 / 3 / 3 / 5;
}

.item-3 {
    grid-area: 3/ 1 / -1 / -1;
}